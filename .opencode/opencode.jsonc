{
  "$schema": "https://opencode.ai/config.json",
  // "plugin": ["opencode-openai-codex-auth"],
  // "enterprise": {
  //   "url": "https://enterprise.dev.opencode.ai",
  // },
  "provider": {
    "opencode": {
      "options": {}
    },
    // Chinese LLM Providers
    // Moonshot AI (Kimi K2.5) - https://platform.moonshot.ai
    // Uses OpenAI-compatible API with @ai-sdk/openai-compatible
    "moonshot": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Moonshot AI (Kimi)",
      "env": ["MOONSHOT_API_KEY"],
      "api": "https://api.moonshot.cn/v1",
      "models": {
        "kimi-k2.5": {
          "name": "Kimi K2.5",
          "attachment": true,
          "reasoning": false,
          "temperature": true,
          "tool_call": true,
          "modalities": {
            "input": ["text", "image"],
            "output": ["text"]
          },
          "limit": {
            "context": 256000,
            "output": 128000
          },
          "cost": {
            "input": 0.6,
            "output": 3.0
          },
          "release_date": "2025-05-01",
          "options": {}
        },
        "kimi-k2.5-thinking": {
          "name": "Kimi K2.5 (Thinking)",
          "attachment": true,
          "reasoning": true,
          "temperature": true,
          "tool_call": true,
          "modalities": {
            "input": ["text", "image"],
            "output": ["text"]
          },
          "limit": {
            "context": 256000,
            "output": 128000
          },
          "cost": {
            "input": 0.6,
            "output": 3.0
          },
          "release_date": "2025-05-01",
          "options": {}
        }
      }
    },
    // Zhipu AI (GLM 4.7) - https://open.bigmodel.cn
    // Uses zhipu-ai-provider package (bundled)
    // China endpoint: https://open.bigmodel.cn/api/paas/v4
    // Global endpoint: https://api.z.ai/api/paas/v4
    "zhipu": {
      "npm": "zhipu-ai-provider",
      "name": "Zhipu AI (GLM)",
      "env": ["ZHIPU_API_KEY"],
      "api": "https://open.bigmodel.cn/api/paas/v4",
      "models": {
        "glm-4.7": {
          "name": "GLM 4.7",
          "attachment": true,
          "reasoning": false,
          "temperature": true,
          "tool_call": true,
          "modalities": {
            "input": ["text", "image"],
            "output": ["text"]
          },
          "limit": {
            "context": 200000,
            "output": 128000
          },
          "release_date": "2025-03-01",
          "options": {}
        },
        "glm-4.7-flash": {
          "name": "GLM 4.7 Flash",
          "attachment": true,
          "reasoning": false,
          "temperature": true,
          "tool_call": true,
          "modalities": {
            "input": ["text", "image"],
            "output": ["text"]
          },
          "limit": {
            "context": 200000,
            "output": 128000
          },
          "release_date": "2025-03-01",
          "options": {}
        }
      }
    },
    // MiniMax (M2.1) - https://platform.minimax.io
    // Uses vercel-minimax-ai-provider package (dynamically loaded)
    // Global endpoint: https://api.minimax.io/v1
    // China endpoint: https://api.minimaxi.com/v1
    "minimax": {
      "npm": "vercel-minimax-ai-provider",
      "name": "MiniMax",
      "env": ["MINIMAX_API_KEY"],
      "api": "https://api.minimax.io/v1",
      "models": {
        "MiniMax-M2.1": {
          "name": "MiniMax M2.1",
          "attachment": true,
          "reasoning": false,
          "temperature": true,
          "tool_call": true,
          "modalities": {
            "input": ["text"],
            "output": ["text"]
          },
          "limit": {
            "context": 200000,
            "output": 65536
          },
          "release_date": "2025-04-01",
          "options": {}
        },
        "MiniMax-M2.1-lightning": {
          "name": "MiniMax M2.1 Lightning",
          "attachment": true,
          "reasoning": false,
          "temperature": true,
          "tool_call": true,
          "modalities": {
            "input": ["text"],
            "output": ["text"]
          },
          "limit": {
            "context": 200000,
            "output": 65536
          },
          "release_date": "2025-04-01",
          "options": {}
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
    },
  },
  "tools": {
    "github-triage": false,
    "github-pr-search": false,
  },
}
